{
  "title": "Emacs",
  "rules": [
    {
      "description": "Change ctrl+d to delete_forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": ["^org\\.gnu\\.Emacs$"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change ctrl+h to delete_or_backspace",
